{
    "manifest_version": 2,
    "name": "Buff trade helper",
    "version": "1.0",
    "description": "This extension help you use site buff.163.com",
    "permissions": ["storage"],
    "browser_action": {
        "default_popup": "popup-page/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://steamcommunity.com/market/*"],
            "js": ["content-scripts/steam-market-highlight.js"]
        }
    ]
}